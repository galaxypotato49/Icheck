<%- include('includes/header'); -%>
<%- include('includes/nav'); -%>

<div class="container">

  <h1>Feed</h1>
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link <% if (!selectedCategory) { %>active<% } %>" href="/icheck">전체</a>
    </li>
    <% for(var i=0; i < category.length; i++) { %>
      <a class="nav-link <% if (selectedCategory==category[i].id) { %>active<% } %>" href="?category=<%= category[i].id %>"><%= category[i].title %></a>
    <% } %>
  </ul>

  <% if (feed.length>0) { %>
  <ul class="list-unstyled">
    <% for(var i=0; i < feed.length; i++) { %>
    <li class="media">

      <% if (typeof feed[i].upload !== 'undefined' && feed[i].upload) { %>
        <a href="/icheck/<%= feed[i].id %>"><img class="mr-3" src="/uploads/<%= feed[i].upload %>"width="128"></a>
      <% } %>

      <div class="media-body">
        <h5 class="mt-0 mb-1"><a href="/icheck/<%= feed[i].id %>"><%= feed[i].title %></a></h5>
        <%= feed[i].category_title %> /
        <%= feed[i].author %>
      </div>
    </li>
    <% } %>
  </ul>

  <% } else { %>
    <div class="card">
      <div class="card-header">
        Alert!
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>Please add new article</p>
        </blockquote>
      </div>
    </div>
  <% } %>

  <div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
    <div class="btn-group" role="group" aria-label="First group">
    </div>
    <div class="input-group">
      <a href="/icheck/add" class="btn btn-outline-success">피드작성</a>
    </div>
  </div>
</div>
<%- include('includes/footer'); -%>
